{
  "name": "mugs-store",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prestart": "npm update",
    "start": "npm-run-all --parallel frontend lint:watch db api",

    "frontend": "webpack-dev-server --content-base src --inline --hot",
    "api": "nodemon --exec babel-node api/index.js localhost 3000",
    "db": "mongod --dbpath=db --port 27017 --auth",

    "server": "babel-node server.js",

    "lint": "node_modules/.bin/esw webpack.config.* src server",
    "lint:watch": "npm run lint -- --watch",

    "test": "jest",
    "coverage": "npm test -- --coverage",

    "prebuild": "npm run build:clean && npm run build:copy",
    "build": "cross-env NODE_ENV=production webpack --config webpack.config",
    "build:clean": "rimraf \"dist/!(.git*|Procfile)**\"",
    "build:copy": "copyfiles -u 1 public/* public/**/* dist",

    "seed": "npm-run-all clear:users seed:users",
    "clear:users": "mongo shirts -u root -p root --eval='db.users.remove({});'",
    "seed:users": "mongoimport --db=shirts -u=root -p=root --collection users --file=db/seeds/users.json --jsonArray"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "babel-cli": "^6.24.1",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.17.2",
    "express": "^4.15.3",
    "extract-text-webpack-plugin": "^2.1.0",
    "jsonwebtoken": "^7.4.1",
    "mobx": "^2.3.7",
    "mobx-react": "^3.5.1",
    "mongodb": "^2.2.27",
    "mongoose": "^4.10.4",
    "morgan": "^1.8.2",
    "nodemon": "^1.11.0",
    "passport": "^0.3.2",
    "passport-jwt": "^2.2.1",
    "passport-local": "^1.0.0",
    "prop-types": "^15.5.8",
    "react": "^15.2.1",
    "react-dom": "^15.3.0",
    "universal-webpack": "^0.3.9"
  },
  "devDependencies": {
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.2.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-class-properties": "^6.10.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-2": "^6.24.1",
    "cross-env": "^4.0.0",
    "css-loader": "^0.23.1",
    "eslint": "^3.19.0",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-react": "^6.10.3",
    "eslint-watch": "^3.1.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "http-server": "^0.9.0",
    "isomorphic-webpack": "^2.0.2",
    "npm-run-all": "^4.0.2",
    "react-addons-test-utils": "^15.3.0",
    "react-helmet": "^5.0.3",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.1.1",
    "style-loader": "^0.13.2",
    "webpack": "^2.4.1",
    "webpack-dev-middleware": "^1.10.2",
    "webpack-dev-server": "^2.4.2"
  }
}
